<h1>Companies</h1>


<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad de Empleados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company_path(company.id)%></td>
        <td><%= company.employees.count %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', company, class: 'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Company', new_company_path %>
